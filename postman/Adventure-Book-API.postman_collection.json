{
  "info": {
    "name": "Adventure Book API",
    "description": "REST API for adventure books",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "bookId", "value": "1" },
    { "key": "sessionId", "value": "1" }
  ],
  "item": [
    {
      "name": "Books",
      "item": [
        {
          "name": "List all books",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/books"
          }
        },
        {
          "name": "List books (filter by title)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/books?title=Crystal",
              "host": ["{{baseUrl}}"],
              "path": ["api", "books"],
              "query": [{ "key": "title", "value": "Crystal" }]
            }
          }
        },
        {
          "name": "List books (filter by difficulty)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/books?difficulty=EASY",
              "host": ["{{baseUrl}}"],
              "path": ["api", "books"],
              "query": [{ "key": "difficulty", "value": "EASY" }]
            }
          }
        },
        {
          "name": "Get book by id",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/books/{{bookId}}"
          }
        },
        {
          "name": "Update book categories",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"categories\": [\"ADVENTURE\", \"FICTION\"]\n}"
            },
            "url": "{{baseUrl}}/api/books/{{bookId}}/categories"
          }
        },
        {
          "name": "Get section",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/books/{{bookId}}/sections/1"
          }
        }
      ]
    },
    {
      "name": "Sessions",
      "item": [
        {
          "name": "Create session",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "  const loc = pm.response.headers.get('Location');",
                  "  if (loc) {",
                  "    const id = loc.split('/').pop();",
                  "    pm.collectionVariables.set('sessionId', id);",
                  "  }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bookId\": {{bookId}}\n}"
            },
            "url": "{{baseUrl}}/api/sessions"
          }
        },
        {
          "name": "Get session",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/sessions/{{sessionId}}"
          }
        },
        {
          "name": "Get current section",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/sessions/{{sessionId}}/current"
          }
        },
        {
          "name": "Make choice",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"gotoSectionId\": 2\n}"
            },
            "url": "{{baseUrl}}/api/sessions/{{sessionId}}/choices"
          }
        }
      ]
    }
  ]
}
